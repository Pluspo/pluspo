javascript:
  window.addEventListener('load', function() {
    if(!sessionStorage.getItem('disp_modal')) {
        sessionStorage.setItem('disp_modal', 'on');
        const body = document.querySelector('body');
        const bgModal = document.querySelector('.js-bg_onetime_modal');
        const modal = document.querySelector('.js-onetime_modal');
        const modalTitleClose = document.querySelector('.js-onetime_modal_title_close');
        body.classList.add('open_modal');

        bgModal.addEventListener('click', function() {
            closeModal();
        });
        modal.addEventListener('click', function(e) {
            e.stopPropagation();
        });
        modalTitleClose.addEventListener('click', function() {
            closeModal();
        });

        function closeModal() {
            body.classList.remove('open_modal');
        }
    }
  }, false);
